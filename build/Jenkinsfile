pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                jobDsl removedConfigFilesAction: 'DELETE', removedJobAction: 'DELETE', removedViewAction: 'DELETE', scriptText: '''job(\'hello-bob-dsl\') {
                    steps {
                        shell("echo \'Hello World!\'")
                    }
                    }'''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
